<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class="card" style="width: 98%; left: 1%; background-color:#8C9A9E;">
  <div class="card-body">
    <%= form_with model: [ @article, @article.comments.build ] do |form| %>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Username:</span>
        <%= form.text_field :commenter, :class => "form-control", :placeholder => "Type a username..." %>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Comment:</span>
        <%= form.text_field :body, :class => "form-control", :placeholder => "Type a comment..."%>
      </div>

      <p>
        <%= form.label :status %>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
      </p>

      <div class="form-actions">
        <%= form.submit :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<br>